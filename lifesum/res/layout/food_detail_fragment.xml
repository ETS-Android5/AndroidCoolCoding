<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/ghost_white"
    android:orientation="vertical" >

    <!-- Header view -->

    <RelativeLayout
        android:id="@+id/rl_food_detail_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iv_prev" />

        <TextView
            android:id="@+id/txt_food_detail_title"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/iv_next" />
    </RelativeLayout>

    <!-- View to show the category -->

    <TextView
        android:id="@+id/txt_food_detail_category"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_food_detail_header"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <!-- Table to show the details of the food -->

    <TableLayout
        android:id="@+id/tbl_food_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_food_category"
        android:padding="5dp"
        android:visibility="gone" >
    </TableLayout>

    <ProgressBar
        android:id="@+id/pg_loading_food_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
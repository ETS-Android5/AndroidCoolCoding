<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jpp.roundedimages.MainScreen$PlaceholderFragment" >

    <com.jpp.roundedimages.RoundedImageView
        android:id="@+id/iv_rounded"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_rounded"
        android:layout_alignTop="@+id/iv_rounded"
        android:src="@drawable/ic_battery_50"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_rounded"
        android:src="@drawable/ic_busy"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_mic_satus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_rounded"
        android:layout_alignLeft="@+id/iv_rounded"
        android:src="@drawable/ic_mute"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_heartbeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_rounded"
        android:layout_alignTop="@+id/iv_rounded"
        android:src="@drawable/ic_heartbeat_green"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_p_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_rounded"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_car"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_rounded"
        android:layout_alignRight="@+id/iv_rounded"
        android:background="@drawable/dialog_button_selector"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_name"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Jhon Doe" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/santa_clara" />
    </LinearLayout>

</RelativeLayout>
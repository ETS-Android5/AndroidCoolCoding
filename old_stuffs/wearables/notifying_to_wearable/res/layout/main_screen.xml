<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_launch_simple_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_simple_notification" />

    <Button
        android:id="@+id/btn_launch_notification_with_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_notification_with_action_buttons" />

    <Button
        android:id="@+id/btn_launch_notification_with_only_wearable_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_notification_only_wearable_action" />

    <Button
        android:id="@+id/btn_launch_notification_with_big_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_notification_with_big_view" />

    <Button
        android:id="@+id/btn_launch_notification_with_hint_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_notificationwith_hint_hide" />

</LinearLayout>